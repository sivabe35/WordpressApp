<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_view"
    android:fitsSystemWindows="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="start"
    android:maxWidth="@dimen/left_menu_width">

    <FrameLayout
        android:id="@+id/navigationViewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/menu_fragment"
            android:tag="LeftMenuFragment"
            class="com.toapplication.wordpressapp.ui.leftmenu.LeftMenuFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_left_menu"/>
    </FrameLayout>


</android.support.design.widget.NavigationView>